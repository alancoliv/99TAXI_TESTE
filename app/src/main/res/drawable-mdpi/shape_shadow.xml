<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#11000000" android:width="3dp"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>

    <item  android:top="0dp" android:left="0dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <size android:width="40dp" android:height="40dp" />
            <solid android:color="@color/white_transparent" />
            <stroke android:width="1dp" android:color="#22000000"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>

</layer-list>
